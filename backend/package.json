{
  "name": "code-snippet-manager",
  "version": "1.0.0",
  "description": "Full-stack Code Snippet Manager",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "create-admin": "node create-admin.js",
    "build": "cd ../frontend && npm run build && xcopy /E /I /Y dist ..\\backend\\public",
